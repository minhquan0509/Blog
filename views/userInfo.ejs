<%- include('partials/header'); -%>
<div class="content">
    <div class="container">
        <h1 class="content-heading">Personal infomation</h1>
        <form class="info-form" action="/user/info?_method=PUT" method="post">
            <div class="form-row">
                <div class="col-half">
                <label class="content-label" for="firstname">First name</label>
                <input type="text" name="firstname" class="form-field form-name" value="<%= user.firstName %>">
                </div>
                <div class="col-half">
                <label class="content-label" for="name">Last name</label>
                <input type="text" name="lastname" class="form-field form-name" value="<%= user.lastName %>">
                </div>
            </div>
            <div class="form-row">
                <div class="col-half">
                <label class="content-label" for="username">Username</label>
                <input type="text" name="username" class="form-field form-name" value="<%= user.username %>" disabled>
                </div>
                <div class="col-half">
                <label class="content-label" for="email">Email</label>
                <input type="text" name="email" class="form-field form-name" value="<%= user.email %>" disabled>
                </div>
            </div>
            <div class="form-row">
                <div class="col-full">
                    <label class="content-label" for="address">Address</label>
                    <input type="text" name="address" class="form-field form-address" value="<%= user.address %>">
                </div>
            </div>
            <button class="btn" type="submit">Update</button>
        </form>
    </div>
</div>
<%- include('partials/footer'); -%>